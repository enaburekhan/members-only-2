


<div>
  <div class="card-body">
    <% @posts.each do |post| %>
      <% if user_signed_in? %>
        <h3 class="card-title"><%= link_to post.author, @root %></h3>
        <p class="card-text"><%= link_to post.body, @root %></p>
      <% else %>
        <p class="card-text"><%= link_to post.body, @root %></p>
      <% end %>
    <% end %>
  </div>
</div>