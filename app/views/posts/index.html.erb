<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <% if user_signed_in? %>
      <li>
        <%= link_to post.author, @root %>
      </li>
      <li>
        <%= link_to post.body, @root %>
      </li>
      <% else %>
      <li>
        <%= link_to post.body, @root %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %>
<%= button_to "Sign out", destroy_user_session_path, method: :delete %>
