<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
    <% @post.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
   <div>
    <%= form.submit %>
  </div>
<% end %>
  
